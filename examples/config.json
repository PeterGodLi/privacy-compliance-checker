{
  "app": {
    "bundleName": "com.example.harmonyapp",
    "vendor": "example",
    "version": {
      "code": 1000000,
      "name": "1.0.0"
    },
    "apiVersion": {
      "compatible": 8,
      "releaseType": "Release",
      "target": 9
    }
  },
  "deviceConfig": {},
  "module": {
    "package": "com.example.harmonyapp",
    "name": ".MainAbility",
    "mainAbility": ".MainAbility",
    "deviceType": [
      "phone",
      "tablet",
      "tv",
      "wearable"
    ],
    "distro": {
      "deliveryWithInstall": true,
      "moduleName": "entry",
      "moduleType": "entry",
      "installationFree": false
    },
    "abilities": [
      {
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "action.system.home"
            ]
          }
        ],
        "orientation": "unspecified",
        "visible": true,
        "srcPath": "MainAbility",
        "name": ".MainAbility",
        "srcLanguage": "ets",
        "icon": "$media:icon",
        "description": "$string:MainAbility_desc",
        "formsEnabled": false,
        "label": "$string:MainAbility_label",
        "type": "page",
        "launchType": "standard"
      }
    ],
    "reqPermissions": [
      {
        "name": "ohos.permission.CAMERA",
        "reason": "需要使用相机功能拍摄照片和录制视频",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.MICROPHONE",
        "reason": "需要使用麦克风功能录制音频和语音通话",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.LOCATION",
        "reason": "需要获取位置信息以提供基于位置的服务",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.LOCATION_IN_BACKGROUND",
        "reason": "需要在后台获取位置信息以提供持续的位置服务",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.READ_MEDIA",
        "reason": "需要读取媒体文件以提供内容浏览功能",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.WRITE_MEDIA",
        "reason": "需要写入媒体文件以保存用户创建的内容",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.INTERNET",
        "reason": "需要网络访问权限以提供在线服务",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.GET_NETWORK_INFO",
        "reason": "需要获取网络信息以优化网络连接",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.READ_CONTACTS",
        "reason": "需要读取通讯录以提供联系人相关功能",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.USE_BLUETOOTH",
        "reason": "需要使用蓝牙功能以连接外部设备",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.ACTIVITY_MOTION",
        "reason": "需要访问运动传感器以提供健康监测功能",
        "usedScene": {
          "abilities": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      }
    ],
    "js": [
      {
        "mode": {
          "syntax": "ets",
          "type": "pageAbility"
        },
        "pages": [
          "pages/index"
        ],
        "name": ".MainAbility",
        "window": {
          "designWidth": 720,
          "autoDesignWidth": false
        }
      }
    ]
  }
}